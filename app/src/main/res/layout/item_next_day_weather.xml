<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginBottom="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/nextDayDate"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:fontFamily="@font/questrial"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="Tomorrow" />

    <ImageView
        android:id="@+id/nextDayIconBack"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="1.5dp"
        android:layout_marginTop="1.5dp"
        android:padding="4dp"
        android:tint="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/nextDayIcon"
        app:layout_constraintTop_toTopOf="@+id/nextDayIcon"
        tool:src="@drawable/clear_day" />

    <ImageView
        android:id="@+id/nextDayIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="4dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintRight_toLeftOf="@+id/nextDayMaxTemperature"
        tool:src="@drawable/clear_day" />

    <TextView
        android:id="@+id/nextDayMaxTemperature"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:gravity="center"
        android:paddingTop="16dp"
        android:fontFamily="@font/questrial"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintRight_toLeftOf="@+id/nextDayForwardSlashTemperature"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="19°" />

    <TextView
        android:id="@+id/nextDayForwardSlashTemperature"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:gravity="center"
        android:paddingTop="16dp"
        android:fontFamily="@font/questrial"
        android:paddingBottom="16dp"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/nextDayMinTemperature"
        app:layout_constraintRight_toLeftOf="@+id/nextDayMaxTemperature"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="/" />

    <TextView
        android:id="@+id/nextDayMinTemperature"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:fontFamily="@font/questrial"
        android:paddingBottom="16dp"
        android:alpha="0.6"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/nextDayForwardSlashTemperature"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="19°" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/gradient_next_day_lines"/>

</androidx.constraintlayout.widget.ConstraintLayout>